@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5 col-lg-4">

        <div class="card p-4 shadow-lg border-0">
            <h2 class="text-center mb-1">Giriş Yap</h2>
            <p class="text-center text-muted mb-4">
                Yerel hesabın ile giriş yap
            </p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly"
                     class="text-danger mb-3"
                     role="alert"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com" />
                    <label asp-for="Input.Email">E-posta</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password"
                           class="form-control"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="password" />
                    <label asp-for="Input.Password">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember me -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        Beni hatırla
                    </label>
                </div>

                <!-- Button -->
                <button id="login-submit"
                        type="submit"
                        class="w-100 btn btn-lg btn-primary mb-3">
                    Giriş Yap
                </button>

                <!-- Links -->
                <div class="login-links text-center">
                    <a asp-page="./ForgotPassword">Şifremi unuttum</a>
                    <a asp-page="./Register">Yeni hesap oluştur</a>
                    <a asp-page="./ResendEmailConfirmation">
                        E-posta onayını tekrar gönder
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>

<style>
    .login-links a {
        display: block;
        margin: 6px 0;
        font-size: 0.95rem;
    }

    .card {
        background: rgba(15, 23, 42, 0.92);
        color: #e5e7eb;
        border-radius: 1rem;
    }

        .card h2 {
            color: #f9fafb;
        }

        .card .text-muted {
            color: #9ca3af !important;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
