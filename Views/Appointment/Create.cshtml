@model FitnessCenterApp.Models.Appointment

@{
    ViewData["Title"] = "Yeni Randevu";
    var isAdmin = User.IsInRole("Admin");
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @* ADMIN ise Üye seçsin *@
            @if (isAdmin)
            {
                <div class="form-group mb-3">
                    <label class="form-label">Üye</label>
                    <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId">
                        <option value="">Üye seçiniz</option>
                    </select>
                    <span asp-validation-for="MemberId" class="text-danger"></span>
                </div>
            }
            else
            {
                @* Normal kullanıcı: Üye seçtirme (controller otomatik atayacak) *@
                <input type="hidden" asp-for="MemberId" />
            }

            <div class="form-group mb-3">
                <label class="form-label">Eğitmen</label>
                <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId">
                    <option value="">Eğitmen seçiniz</option>
                </select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Hizmet</label>
                <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId">
                    <option value="">Hizmet seçiniz</option>
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Tarih / Saat</label>
                <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Listeye Dön</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

