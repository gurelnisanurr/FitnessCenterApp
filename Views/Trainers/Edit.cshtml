@model FitnessCenterApp.Models.Trainer

@{
    ViewData["Title"] = "Edit";
}

<h1>Düzenle</h1>

<h4>Eğitmen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialtyText" class="control-label"></label>
                <input asp-for="SpecialtyText" class="form-control" />
                <span asp-validation-for="SpecialtyText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FitnessCenterId" class="control-label"></label>
                <select asp-for="FitnessCenterId" class="form-control" asp-items="ViewBag.FitnessCenterId"></select>
                <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye geri dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
