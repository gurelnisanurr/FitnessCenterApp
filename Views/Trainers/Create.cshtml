@model FitnessCenterApp.Models.ViewModels.TrainerViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trainer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label>Verdiği Hizmetler</label>
            <div>
                @foreach (var service in Model.Services)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="SelectedServiceIds"
                               value="@service.Value" />

                        <label class="form-check-label">@service.Text</label>
                    </div>
                }
            </div>
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Trainer.FullName" class="control-label"></label>
                <input asp-for="Trainer.FullName" class="form-control" />
                <span asp-validation-for="Trainer.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.SpecialtyText" class="control-label"></label>
                <input asp-for="Trainer.SpecialtyText" class="form-control" />
                <span asp-validation-for="Trainer.SpecialtyText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.FitnessCenterId" class="control-label"></label>
                <select asp-for="Trainer.FitnessCenterId" class ="form-control" asp-items="ViewBag.FitnessCenterId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
