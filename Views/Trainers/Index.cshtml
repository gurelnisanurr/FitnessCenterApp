@model IEnumerable<FitnessCenterApp.Models.Trainer>

@{
    ViewData["Title"] = "Index";
}

<h1>Eğitmenler</h1>

<p>
    <a asp-action="Create">Yeni Eğitmen Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialtyText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FitnessCenter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialtyText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FitnessCenter.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
