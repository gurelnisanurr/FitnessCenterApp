@model FitnessCenterApp.Models.Service

@{
    ViewData["Title"] = "Hizmet Oluştur";
}

<h1 class="mb-4">Hizmet Oluştur</h1>

<div class="row">
    <div class="col-md-5">

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hizmet Adı -->
            <div class="form-group mb-3">
                <label asp-for="ServiceName" class="form-label">Hizmet Adı</label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>

            <!-- Süre -->
            <div class="form-group mb-3">
                <label asp-for="DurationInMinutes" class="form-label">Süre (Dakika)</label>
                <input asp-for="DurationInMinutes" class="form-control" />
                <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
            </div>

            <!-- Fiyat -->
            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label">Fiyat</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Bağlı Olduğu Salon -->
            <div class="form-group mb-4">
                <label asp-for="FitnessCenterId" class="form-label">Bağlı Olduğu Salon</label>
                <select asp-for="FitnessCenterId"
                        class="form-control"
                        asp-items="ViewBag.FitnessCenterId">
                    <option value="">Salon Seçiniz</option>
                </select>
                <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Listeye Dön</a>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
